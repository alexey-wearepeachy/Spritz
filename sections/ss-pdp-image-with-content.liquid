<article class="color--ss-grapefruit pdp-image-with-text">
  <div class="ss-container">
    <div class="d-flex flex-wrap flex-a-center pdp-image-with-text-d-flex">
      <div class="left-part">
        <div class="title_with_subtitle">
          <h2 class="h2">{{ section.settings.heading }}</h2>
          <div class="text">
            <p class="acumin-pro">{{ section.settings.subheading }}</p>
          </div>
        </div>
        <h4 class="h4">{{ section.settings.icon_heading }}</h4>
        <div class="d-flex flex-wrap text-center icon_text-wrapper">
          {% for block in section.blocks %}
            <div class="icon_text">
              <figure class="d-flex flex-j-center">
                <img
                  data-src="{{ block.settings.image | img_url: '100x' }}"
                  class="lazyload"
                  alt="{{ block.settings.image.alt }}"
                  loading="lazy"
                  width="60"
                  height="60">
              </figure>
              <p class="acumin-pro">{{ block.settings.caption}}</p>
            </div>
          {% endfor %}
        </div>
      </div>
      <div class="right-part">
        <figure class="image">
          <img
            data-srcset="{{ section.settings.image | img_url: '165x' }} 165w,
            {{ section.settings.image | img_url: '360x' }} 360w,
            {{ section.settings.image | img_url: '535x' }} 535w,
            {{ section.settings.image | img_url: '720x' }} 720w,
            {{ section.settings.image | img_url: '940x' }} 940w,
            {{ section.settings.image | img_url: '1070x' }} 1070w"
            src="{{ section.settings.image | img_url: '533x' }}"
            data-sizes="auto" 
            alt="{{ section.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}"
            class="lazyload w-100 h-auto d-block"
            />
        </figure>
      </div>
    </div>
  </div>
</article>

{% schema %}
{
  "name" : "PDP image with text",
  "tag" : "section",
  "settings" : [
    {
      "type" : "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type" : "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type" : "text",
      "id": "icon_heading",
      "label": "Icon heading"
    },
    {
      "type" : "image_picker",
      "id": "image",
      "label": "Right-side image"
    }
  ],
  "blocks": [
    {
      "type": "icontext",
      "name": "Icon + Text",
      "limit": 3,
      "settings": [
        {
          "type" : "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type" : "text",
          "id": "caption",
          "label": "Caption"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "PDP image with text"
    }
  ]
}
{% endschema %}