<article class="color-white homepage-insta-feed background-ss-section-gradient">
    <header class="text-center ss-container">
      <h1 class="ss--secondary-font h2">{{section.settings.heading}}</h1>
      <div class="body-2">{{section.settings.sub_heading}}</div>
    </header>
    <section class="text-center">
      <div class="swiper-container" id="instafeed">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
          <div class="swiper-slide d-flex">
            <figure class="swiper-slide__instafeed-inner d-flex flex-fd-column w-100">
              <img
                data-srcset="{{ block.settings.image | img_url: '200x200', crop: 'center' }},
                {{ block.settings.image | img_url: '200x200', crop: 'center', scale: 2 }}"
                class="lazyload h-auto d-block w-100"
                alt="{{block.settings.image.alt}} by {{shop.name}} on Instagram"
                loading="lazy"
                width="200"
                height="200"
                />
            </figure>
          </div>
          {%- endfor -%}
        </div>
      </div>
      <div class="text-center ss-container">
        <a href="{{settings.instagram_url}}" class="svg-btn large d-flex flex-a-center flex-j-center bg-transperant" aria-label="Follow {{shop.name}} on Instagram" target="_blank">
          {% render '_ss_polygon_button_shape', type: '' %}
          <span>Follow us</span>
        </a>
        <!--
        <div class="notchouter-btn">
          <div class="notchinner-btn">
            <a
              href="{{settings.instagram_url}}"
              class="polygone-btn"
              aria-label="Follow {{shop.name}} on Instagram"
              target="_blank">Follow us</a>
          </div>
        </div>-->
      </div>
    </section>
</article>

{% schema %}
{
  "name" : "Homepage Insta Feed",
  "tag" : "section",
  "settings" : [
    {
      "type" : "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type" : "richtext",
      "id": "sub_heading",
      "label": "Sub-Heading"
    }
  ],
  "blocks": [
    {
      "type": "images",
      "name": "Images",
      "settings": [
        {
          "type" : "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Homepage Insta Feed"
    }
  ]
}
{% endschema %}