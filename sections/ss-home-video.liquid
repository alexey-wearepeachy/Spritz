<article class="video-slot">
  <div class="inner">
    <video
      src="{{section.settings.video_url}}"
      class="asset-fill video-plays-in-view"
      {% if section.settings.poster != blank %}
        poster="{{ section.settings.poster | img_url: '1200x' }}"
      {% endif %}
      preload="metadata"
      muted playsinline loop -webkit-playsinline>
    </video>
  </div>
</article>


{% schema %}
{
  "name" : "Homepage video slot",
  "tag" : "section",
  "settings" : [
    {
      "type" : "text",
      "id": "video_url",
      "label": "Video URL"
    },
    {
      "type" : "image_picker",
      "id": "poster",
      "label": "Video placeholder image"
    }
  ],
  "presets": [
    {
      "name": "Homepage video slot"
    }
  ]
}
{% endschema %}