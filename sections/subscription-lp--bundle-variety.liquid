<article class="background-ss-background color-ss-grapefruit homepage-bundle subs subscription-lp--bundle">
    <header class="text-center">
        <h1 class="ss--secondary-font homepage-bundle__heading heading-xxl">{{section.settings.heading}}</h1>
    </header>
    <section class="text-center">
        {% render '_ss_bundle_product-variety' as product: all_products[section.settings.product] %}
    </section>
</article>


{% schema %}
{
    "name" : "Subscription Bundle",
    "tag" : "section",
    "settings" : [
        {
            "type" : "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type" : "product",
            "id": "product",
            "label": "Choose product"
        }
    ],
    "presets": [
        {
            "name": "Bundle Product (Variety)"
        }
    ]
}
{% endschema %}