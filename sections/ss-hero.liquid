{% schema %}
{
  "name" : "Hero Homepage",
  "tag" : "section",
  "class" : "hero-section spaced-section spaced-section--full-width",
  "settings" : [
    {
      "type" : "text",
      "id": "subtext",
      "label": "Hero sub text"
    },
    {
      "type" : "richtext",
      "id": "text",
      "label": "Hero text"
    },
    {
      "type" : "text",
      "id": "btn_text",
      "label": "Button label"
    },
    {
      "type" : "url",
      "id": "btn_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "please add image in desending order"
    },
    {
      "type" : "image_picker",
      "id": "image",
      "label": "First image"
    },
    {
      "type" : "image_picker",
      "id": "image2",
      "label": "Second image"
    },
    {
      "type" : "image_picker",
      "id": "image3",
      "label": "Third image"
    },
    {
      "type" : "image_picker",
      "id": "image4",
      "label": "Fourth image"
    },
    {
      "type": "text",
      "id": "press_title",
      "label": "Press title"
    }
  ],
  "blocks": [
    {
        "type": "ticker_tap",
        "name": "Ticker Tap",
        "settings": [
		      {
            "type" : "text",
            "id": "ticker_text",
            "label": "Ticker text"
          }
        ]
    },
    {
        "type": "press",
        "name": "Press logo",
        "settings": [
            {
                "type": "image_picker",
                "id": "logo",
                "label": "Press logo"
            }
        ]
    }
  ],
  "presets": [
    {
      "name": "Hero Homepage"
    }
  ]
}
{% endschema %}