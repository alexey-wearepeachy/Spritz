{% liquid
    assign title = section.settings.title
    assign descr = section.settings.descr
    assign btn_text = section.settings.btn_text
    assign btn_url = section.settings.btn_url
    assign desk_img = section.settings.desk_img
    assign mob_img = section.settings.mob_img
%}

<section class="subs-lp--hero">
    <div class="container">
        <div class="subs-lp--hero__content">
            <h1 class="hero__title">{{ title }}</h1>
            <div class="hero__descr">{{ descr }}</div>
            <a href="{{ btn_url }}" class="hero__btn svg-btn large d-flex flex-a-center flex-j-center bg-transperant">
                {% render '_ss_polygon_button_shape', type: '' %}
                <span>{{ btn_text }}</span>
            </a>
        </div>
        <div class="subs-lp--hero__image">
            <picture>
                <source srcset="{{ mob_img | img_url: 'master' }}" alt="{{ mob_img.alt }}" media="(max-width: 1025px)" />
                <img src="{{ desk_img | img_url: 'master' }}" alt="{{ desk_img.alt }}"/>
            </picture>
        </div>
    </div>
</section>

{% schema %}
{
    "name": "Subscription lp hero",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Section title"
        },
        {
            "type": "richtext",
            "id": "descr",
            "label": "Section description"
        },
        {
            "type": "text",
            "id": "btn_text",
            "label": "Button text",
            "default": "subscribe"
        },
        {
            "type": "url",
            "id": "btn_url",
            "label": "Button link"
        },
        {
            "type": "image_picker",
            "id": "desk_img",
            "label": "Desktop image"
        },
        {
            "type": "image_picker",
            "id": "mob_img",
            "label": "Mobile image"
        }
    ],
    "presets": [
        {
            "category": "Subscription lp",
            "name": "Subscription lp hero"
        }
    ]
}
{% endschema %}